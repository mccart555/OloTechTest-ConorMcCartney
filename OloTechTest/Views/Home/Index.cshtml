@{
    ViewData["Title"] = "Home Page";
}
@model RestaurantViewModel

<h2 class="mb-4">Single Page Asp.NET Core App - click a grid row to begin</h2>


<div class="col-md-6">
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-primary">
            <tr class="sticky-top bg-light p-3">
                <th>Name</th>
                <th>Cuisine</th>
                <th>Address</th>
                <th>Price Range</th>
                <th>Delivery</th>
                <th>Dietary Restrictions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var restaurant in Model.Restaurants)
            {
                <tr data-id="@restaurant.Id">
                    <td>@restaurant.Name</td>
                    <td>@restaurant.Cuisine</td>
                    <td>@restaurant.GetFullAddress()</td>
                    <td>@restaurant.Pricerange</td>
                    <td>@(restaurant.Delivery ? "Yes" : "No")</td>
                    <td>
                        Gluten-Free: @(restaurant.Dietaryrestrictions.glutenfree ? "Yes" : "No")<br />
                        Dairy-Free: @(restaurant.Dietaryrestrictions.dairyfree ? "Yes" : "No")
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="col-md-3">
    <div class="row sticky-top sticky-offset-1">
        <partial name="GetFavourites" />
    </div>
    <div class="row sticky-top sticky-offset-0">
        <partial name="GetRestaurant" />
    </div>
</div>

<div class="col-md-3">
    <div class="row sticky-top sticky-offset-0">
        <partial name="SaveFavourite" />
    </div>
</div>
